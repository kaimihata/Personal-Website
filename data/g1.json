{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "width": 400,
    "height": 200,
    "padding": 5,
    "autosize": "fit",
  
    "data": [
      {
        "name": "table",
        "url": "https://kaimihata.com/data/running-data.json",
        "transform": [
          {
            "type": "window",
            "sort": { "field": "date", "order": "ascending"},
            "ops": ["sum"],
            "fields": ["distance"],
            "as": ["sum"]
          }
        ]
      }
    ],
  
    "scales": [
      {
        "name": "xscale",
        "type": "band",
        "domain": {"data": "table", "field": "date"},
        "range": "width",
        "padding": 0.05,
        "round": true
      },
      {
        "name": "yscale",
        "domain": {"data": "table", "field": "sum"},
        "nice": true,
        "range": "height"
      }
    ],
  
    "axes": [
      { "orient": "bottom", "scale": "xscale" },
      { "orient": "left", "scale": "yscale" }
    ],
  
    "marks": [
      {
        "type": "rect",
        "from": {"data":"table"},
        "encode": {
          "enter": {
            "x": {"scale": "xscale", "field": "date"},
            "width": {"scale": "xscale", "band": 0.5},
            "y": {"scale": "yscale", "field": "distance"},
            "y2": {"scale": "yscale", "value": 0}
          },
          "update": {
            "fill": {"value": "steelblue"}
          },
          "hover": {
            "fill": {"value": "red"}
          }
        }
      }
    ]
  }